@using Employee.Core.Application.Dtos;

@model List<EmployeeDto>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">

    <a asp-action="Add" class="btn btn-success text-uppercase w-100 py-3 sm-6"> Agregar Empleado</a>

    <hr />
    <br />

    <div class="col-sm-6 w-100 d-flex align-items-center gap-4 mb-12">
        @if (Model.Count == 0)
        {
            <p>No existe ningun Empleado</p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"> Nombre</th>
                    <th scope="col"> Apellido </th>
                    <th scope="col"> Fecha de Contratacion</th>
                    <th scope="col"> Acciones</th>
                </tr>
            </thead>

            @foreach (EmployeeDto item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.FechaContratacion</td>
                        <td>
                            <div class="d-flex justify-content-start w-100 p-3 mr-1">
                                <a asp-controller="Home"
                                   asp-action="Update"
                                   asp-route-id="@item.Id"
                                       class="btn btn-sm btn-info me-2 w-100 mr-1">
                                        Editar
                                </a>

                                <a asp-controller="Home"
                               asp-action="Disassociation"
                               asp-route-id="@item.Id"
                                   class="btn btn-sm btn-warning me-2 w-100 ">
                                    Desvincular
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
       
    </div>
</div>